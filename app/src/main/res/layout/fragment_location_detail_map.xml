<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE" >
    <!--android:background="@color/grey"-->

    <com.wizcodegroup.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/layout_slidingup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        custom:collapsedHeight="80sp"
        custom:shadowHeight="4sp" >

        <LinearLayout
            android:id="@+id/layout_title_directions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:orientation="vertical" >
            <!--android:background="@color/grey"-->

            <RelativeLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_indicator"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_duration_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="19 min(7.0 km)"
                        android:textColor="#080707"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_sumary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:singleLine="true"
                        android:text="Road Mate"
                        android:textColor="#080707"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5sp"
                     />
                <!--android:src="@drawable/ic_action_collapse"-->
            </RelativeLayout>

            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2sp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/list_directions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:paddingBottom="5sp"
                    android:orientation="vertical" >
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </com.wizcodegroup.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>